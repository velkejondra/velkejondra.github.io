---
import { photoblog } from "../../lib/list";
import Section from "../../components/common/Section.astro";
import PhotoblogSnippet from "../../components/PhotoblogSnippet.astro";
import Layout from "../../layouts/Layout.astro";
import { GLOBAL } from "../../lib/variables";
---

<Layout>
  <Fragment slot="head">
    <title>{GLOBAL.photoblogTitle} • {GLOBAL.username}</title>
    <meta
      name="description"
      content={GLOBAL.photoblogLongDescription}
    />
    <meta property="og:title" content={`${GLOBAL.photoblogTitle} • ${GLOBAL.username}`} />
    <meta
      property="og:description"
      content={GLOBAL.photoblogShortDescription}
    />
    <meta property="og:image" content={`${GLOBAL.rootUrl}/${GLOBAL.profileImage}`} />
    <meta property="og:url" content={`${GLOBAL.rootUrl}/photoblog`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${GLOBAL.photoblogTitle} • ${GLOBAL.username}`} />
    <meta
      name="twitter:description"
      content={GLOBAL.photoblogShortDescription}
    />
    <meta name="twitter:image" content={`${GLOBAL.rootUrl}/${GLOBAL.profileImage}`} />
    <meta http-equiv="content-language" content="en" />
    <meta name="language" content="English" />
    <link rel="canonical" href={`${GLOBAL.rootUrl}/photoblog`} />
  </Fragment>
  <Section class="py-4 my-8">
    <div class="flex items-center gap-4 pt-8 pb-16">
      <h1 class="font-display text-3xl sm:text-4xl leading-loose">{GLOBAL.photoblogName}</h1>
    </div>
    <ul>
      {
        photoblog.map((photoblog) => (
          <li>
            <PhotoblogSnippet
              title={photoblog.title}
              description={photoblog.description}
              url={photoblog.filename}
              githubUrl={photoblog.githubUrl}
              liveUrl={photoblog.liveUrl}
              tags={photoblog.tags ?? []}
            />
          </li>
        ))
      }
    </ul>
  </Section>
</Layout>
